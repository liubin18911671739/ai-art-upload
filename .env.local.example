# POC local mock mode
POC_MOCK_MODE=false
POC_MOCK_JOB_DELAY_MS=2500
POC_MOCK_DATA_TTL_MS=3600000

# Database (Supabase Postgres)
# Prefer the "Transaction Pooler" connection string from Supabase Dashboard:
# Project Settings -> Database -> Connection string.
# Example:
# postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=verify-full
SUPABASE_DB_URL=postgres://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?sslmode=verify-full
# Dev-only escape hatch for corporate/self-signed TLS interception.
# WARNING: This disables TLS certificate verification for outbound HTTPS.
ALLOW_SELF_SIGNED_TLS=false

# Supabase Storage
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key # must be service_role (not anon)
SUPABASE_STORAGE_BUCKET=ai-art
# Optional override; by default it is derived from SUPABASE_URL + bucket.
SUPABASE_STORAGE_PUBLIC_DOMAIN=https://[project-ref].supabase.co/storage/v1/object/public/ai-art
# Backward-compatible alias (optional)
# S3_PUBLIC_DOMAIN=https://[project-ref].supabase.co/storage/v1/object/public/ai-art

# RunPod (provider locked to async-webhook mode)
RUNPOD_API_KEY=
RUNPOD_ENDPOINT_ID=
# Image input strategy:
# - images (recommended by RunPod serverless docs; uses input.images base64)
# - url (send workflow image URL directly)
# - auto (default; currently resolves to images unless class_type indicates URL loader)
RUNPOD_IMAGE_TRANSPORT=auto
# Optional filename used when RUNPOD_IMAGE_TRANSPORT resolves to images
RUNPOD_INPUT_IMAGE_NAME=input-image
# Optional payload size guard for /run request body (bytes). Default: 10485760.
RUNPOD_RUN_MAX_REQUEST_BYTES=10485760
# Optional Comfy.org API key passed as input.comfy_org_api_key
# RUNPOD_COMFY_ORG_API_KEY=
# COMFY_ORG_API_KEY=
# Image checkpoint selection (avoid audio checkpoints)
RUNPOD_CHECKPOINT_NAME=sd_xl_base_1.0.safetensors
# Optional style-specific override:
# RUNPOD_CHECKPOINT_SKETCH=your-sketch-model.safetensors
# RUNPOD_CHECKPOINT_WATERCOLOR=your-watercolor-model.safetensors
# RUNPOD_CHECKPOINT_OIL=your-oil-model.safetensors
# Webhook source validation
RUNPOD_WEBHOOK_SECRET=
RUNPOD_WEBHOOK_TOKEN_PARAM=token

# Public base URL (production domain in normal mode; localhost allowed in POC mock mode)
NEXT_PUBLIC_BASE_URL=https://your-production-domain.com

# Shopify
SHOPIFY_ENABLED=false
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ADMIN_ACCESS_TOKEN=your-shopify-admin-token
SHOPIFY_API_VERSION=2025-10
